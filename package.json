{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "eslint \"**/*.{js,ts,tsx}\" --fix",
    "format:prettier": "prettier \"**/*.{cjs,html,js,json,md,ts,tsx}\" --write",
    "prepare": "husky install",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "watch:css": "tailwindcss build -i src/assets/tailwind.css -o src/assets/main.css"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0"
  },
  "devDependencies": {
  "@testing-library/jest-dom": "^5.11.4",
  "@testing-library/react": "^11.1.0",
  "@testing-library/user-event": "^12.1.10",
  "@types/jest": "^26.0.15",
  "@types/node": "^12.0.0",
  "@types/react": "^17.0.0",
  "@types/react-dom": "^17.0.0",
  "@types/react-router-dom": "^5.3.2",
  "@typescript-eslint/eslint-plugin": "^5.2.0",
  "@typescript-eslint/parser": "^5.2.0",
  "autoprefixer": "^10.3.7",
  "commit-message-validator": "^1.0.2",
  "eslint": "^7.32.0",
  "eslint-config-airbnb": "^18.2.1",
  "eslint-config-prettier": "^8.3.0",
  "eslint-plugin-import": "^2.25.2",
  "eslint-plugin-jsx-a11y": "^6.4.1",
  "eslint-plugin-prettier": "^4.0.0",
  "eslint-plugin-react": "^7.26.1",
  "eslint-plugin-react-hooks": "^4.2.0",
  "husky": "^7.0.2",
  "lint-staged": "^11.2.6",
  "postcss": "^8.3.11",
  "prettier": "2.4.1",
  "react-scripts": "4.0.3",
  "tailwindcss": "^2.2.17",
  "typescript": "^4.1.2"
},
  "config": {
    "commit-message-validator": {
      "pattern": "((feature)|(fix)|(chore)|(update))\\(SB-[1-9]\\d*\\): .*",
      "errorMessage": "+--------------------------------------------------------------------+\n| Check correct commit message formatting in SmartBrew documentation |\n+--------------------------------------------------------------------+"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
